{
  "name": "vscode-halon",
  "version": "5.1.0",
  "publisher": "Halon",
  "engines": {
    "vscode": "^1.28.2"
  },
  "license": "ISC",
  "displayName": "Halon",
  "description": "Halon extension for Visual Studio Code",
  "author": {
    "name": "Halon Security AB"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Linters"
  ],
  "keywords": [
    "halon",
    "hsl"
  ],
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#062B36",
    "theme": "dark"
  },
  "main": "./out/extension",
  "contributes": {
    "languages": [
      {
        "id": "hsl",
        "aliases": [
          "Halon Scripting Language",
          "hsl"
        ],
        "extensions": [
          ".hsl"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "hsl",
        "scopeName": "source.hsl",
        "path": "./syntaxes/hsl.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "halon.init",
        "title": "Halon: Init"
      },
      {
        "command": "halon.initForce",
        "title": "Halon: Init (Force)"
      },
      {
        "command": "halon.build",
        "title": "Halon: Build"
      },
      {
        "command": "halon.livestageStart",
        "title": "Halon: Live Staging (Start)"
      },
      {
        "command": "halon.livestageStatus",
        "title": "Halon: Live Staging (Status)"
      },
      {
        "command": "halon.livestageCancel",
        "title": "Halon: Live Staging (Cancel)"
      }
    ],
    "yamlValidation": [
      {
        "fileMatch": "smtpd.yaml",
        "url": "./node_modules/@halon/json-schemas/smtpd.schema.json"
      },
      {
        "fileMatch": "smtpd-app.yaml",
        "url": "./node_modules/@halon/json-schemas/smtpd-app.schema.json"
      },
      {
        "fileMatch": "queued.yaml",
        "url": "./node_modules/@halon/json-schemas/queued.schema.json"
      },
      {
        "fileMatch": "queued-app.yaml",
        "url": "./node_modules/@halon/json-schemas/queued-app.schema.json"
      },
      {
        "fileMatch": "queued-policy.yaml",
        "url": "./node_modules/@halon/json-schemas/queued-policy.schema.json"
      },
      {
        "fileMatch": "queued-suspend.yaml",
        "url": "./node_modules/@halon/json-schemas/queued-suspend.schema.json"
      },
      {
        "fileMatch": "dlpd.yaml",
        "url": "./node_modules/@halon/json-schemas/dlpd.schema.json"
      },
      {
        "fileMatch": "dlpd-app.yaml",
        "url": "./node_modules/@halon/json-schemas/dlpd-app.schema.json"
      },
      {
        "fileMatch": "httprd.yaml",
        "url": "./node_modules/@halon/json-schemas/httprd.schema.json"
      },
      {
        "fileMatch": "rated.yaml",
        "url": "./node_modules/@halon/json-schemas/rated.schema.json"
      },
      {
        "fileMatch": "rated-app.yaml",
        "url": "./node_modules/@halon/json-schemas/rated-app.schema.json"
      }
    ]
  },
  "activationEvents": [
    "onLanguage:hsl",
    "onCommand:halon.init",
    "onCommand:halon.initForce",
    "onCommand:halon.build",
    "onCommand:halon.livestageStart",
    "onCommand:halon.livestageStatus",
    "onCommand:halon.livestageCancel"
  ],
  "qna": "marketplace",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test",
    "docs": "npm --prefix node_modules/@halon/hsl-docs install && npm --prefix node_modules/@halon/hsl-docs run build && cp node_modules/@halon/hsl-docs/dist/json/* src/docs/",
    "vsce": "./node_modules/vsce/out/vsce"
  },
  "bugs": {
    "url": "https://github.com/halon/vscode-extension/issues",
    "email": "support@halon.io"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/halon/vscode-extension"
  },
  "homepage": "https://github.com/halon/vscode-extension",
  "extensionDependencies": [
    "redhat.vscode-yaml"
  ],
  "devDependencies": {
    "@halon/hsl-docs": "github:halon/hsl-docs",
    "@types/fs-readdir-recursive": "^1.0.0",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.0",
    "@types/path-is-inside": "^1.0.0",
    "@types/ssh2": "^0.5.36",
    "@types/underscore": "^1.8.9",
    "tslint": "^5.11.0",
    "typescript": "^3.2.1",
    "vsce": "^1.59.0",
    "vscode": "^1.1.22"
  },
  "dependencies": {
    "@halon/cli": "^5.1.1",
    "@halon/json-schemas": "github:halon/json-schemas",
    "path-is-inside": "^1.0.2",
    "underscore": "^1.9.1"
  }
}
